{
  "name": "stellar-account-viewer-v2",
  "prettier": "@stellar/prettier-config",
  "version": "0.1.0",
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "dependencies": {
    "@albedo-link/intent": "^0.9.6",
    "@ledgerhq/hw-app-str": "^5.49.0",
    "@ledgerhq/hw-transport-webusb": "^5.49.0",
    "@reduxjs/toolkit": "^1.6.0",
    "@stellar/design-system": "^0.1.0-alpha.3",
    "@stellar/freighter-api": "^1.0.1",
    "@stellar/wallet-sdk": "^0.3.0-rc.4",
    "@types/amplitude-js": "^7.0.1",
    "@types/ledgerhq__hw-transport-u2f": "^4.21.1",
    "@types/qrcode.react": "^1.0.1",
    "amplitude-js": "^7.3.0",
    "bignumber.js": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.0",
    "qrcode.react": "^1.0.0",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux": "^4.1.0",
    "stellar-identicon-js": "^1.0.0",
    "stellar-sdk": "^6.0.0",
    "styled-components": "^5.3.0",
    "trezor-connect": "^8.1.27",
    "tslib": "^2.3.0",
    "typescript": "~4.3.4"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.28.0",
    "**/@typescript-eslint/parser": "^4.28.0"
  },
  "scripts": {
    "install-if-package-changed": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet yarn.lock && yarn install || exit 0",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prod:build": "docker image build --build-arg AMPLITUDE_KEY=$AMPLITUDE_KEY -t account-viewer-next:localbuild .",
    "prod:serve": "docker run -p 8000:80 account-viewer-next:localbuild",
    "production": "yarn prod:build && yarn prod:serve",
    "prepare": "husky install",
    "pre-commit": "concurrently 'pretty-quick --staged' 'lint-staged' 'tsc --noEmit'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@stellar/eslint-config": "^1.0.5",
    "@stellar/prettier-config": "^1.0.1",
    "@stellar/tsconfig": "^1.0.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/ledgerhq__hw-transport-webusb": "^4.70.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.11",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^5.1.10",
    "@types/trezor-connect": "^8.1.18",
    "concurrently": "^6.2.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1"
  }
}
