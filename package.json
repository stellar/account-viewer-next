{
  "name": "stellar-account-viewer-v2",
  "prettier": "@stellar/prettier-config",
  "version": "0.1.0",
  "husky": {
    "hooks": {
      "pre-commit": "concurrently 'pretty-quick --staged' 'lint-staged' 'tsc --noEmit'",
      "post-merge": "yarn install-if-package-changed"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "dependencies": {
    "@albedo-link/intent": "^0.9.6",
    "@ledgerhq/hw-app-str": "^5.28.0",
    "@ledgerhq/hw-transport-u2f": "^5.26.0",
    "@reduxjs/toolkit": "^1.4.0",
    "@stellar/design-system": "^0.1.0-alpha.3",
    "@stellar/freighter-api": "^1.0.0-beta.0",
    "@stellar/wallet-sdk": "^0.3.0-rc.4",
    "@types/amplitude-js": "^7.0.1",
    "@types/ledgerhq__hw-transport-u2f": "^4.21.1",
    "@types/qrcode.react": "^1.0.1",
    "amplitude-js": "^7.3.0",
    "bignumber.js": "^9.0.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.0",
    "qrcode.react": "^1.0.0",
    "react": "^17.0.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "redux": "^4.0.5",
    "stellar-identicon-js": "^1.0.0",
    "stellar-sdk": "^6.0.0",
    "styled-components": "^5.2.0",
    "trezor-connect": "^8.1.16",
    "typescript": "~4.1.3"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.1.1",
    "**/@typescript-eslint/parser": "^4.1.1"
  },
  "scripts": {
    "install-if-package-changed": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet yarn.lock && yarn install || exit 0",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prod:build": "docker image build --build-arg AMPLITUDE_KEY=$AMPLITUDE_KEY -t account-viewer-next:localbuild .",
    "prod:serve": "docker run -p 8000:80 account-viewer-next:localbuild",
    "production": "yarn prod:build && yarn prod:serve"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@stellar/eslint-config": "^1.0.5",
    "@stellar/prettier-config": "^1.0.1",
    "@stellar/tsconfig": "^1.0.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.6",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.0",
    "@types/react": "^17.0.2 ",
    "@types/react-copy-to-clipboard": "^5.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^5.1.3",
    "@types/trezor-connect": "^7.0.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react": "^1.1.7",
    "husky": "^5.1.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2"
  }
}
